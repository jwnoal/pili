---
import BaseLayout from '@/layouts/BaseLayout.astro'
import PostCard from '@/components/PostCard.astro'
import PageNav from '@/components/widget/PageNav.astro'
import { POST_PGAE_SIZE as pageSize } from '@/config'
import posts_all from '@/content/posts'
const posts = posts_all.slice(0, pageSize)
const pnCurr = 1, pnLast = Math.ceil(posts_all.length * 1.0 / pageSize)
---
<BaseLayout asideCards={[
  'CardInfo',
  ['CardMarkdown', { title: 'Hi there! 👋', content:'- 这里记录了我学习游戏开发的心路历程'}],
  'CardCategroies',
  'CardTagCloud',
  'CardSiteInfo',
  'CardToolbar',
]}>
  <div class="space-y-5">
    {posts.map((post) => (
      <PostCard {post}/>
    ))}
  </div>
  <PageNav {pnCurr} {pnLast} urlPrefix="/page/" urlFirst="/"/>
</BaseLayout>
