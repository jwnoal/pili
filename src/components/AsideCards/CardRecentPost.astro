---
import CardBase from './CardBase.astro'
import ChevronBtn from '@/components/widget/ChevronBtn.astro'
import posts from '@/content/posts'
---

<CardBase title="最新文章" iconName="mdi:history">
  <ChevronBtn left href="/" slot="extra"/>

  <ul class="text-sm lh-relaxed pl-2">
    {posts.slice(0,5).map(post=>(
      <li class="py1">
        <a class="block" href={`/posts/${post.id}/`}>{post.data.title}</a>
        <time class="block text-[0.85em] text-textDesc" datetime={post.data.publishDateISOString}>{post.data.publishDateFormatString}</time>
      </li>
    ))}
  </ul>
</CardBase>
